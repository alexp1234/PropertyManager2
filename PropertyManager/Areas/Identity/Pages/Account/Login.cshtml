<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Material Design Bootstrap</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Design Bootstrap -->
    <link href="~/css/mdb.min.css" rel="stylesheet" />
    <!-- Your custom styles (optional) -->
    <link href="~/css/style.min.css" rel="stylesheet" />
</head>

<body>

    <!-- Start your project here-->
    <div class="row" style="margin-top:50px;">
        <div class="col-12">
            <form id="account" method="post" class="border border-light p-5">

                <p class="h4 mb-4 text-center">Sign in</p>

                <input asp-for="Input.Email" type="email" id="defaultLoginFormEmail" class="form-control mb-4" placeholder="E-mail">
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <input type="password" asp-for="Input.Password" id="defaultLoginFormPassword" class="form-control mb-4" placeholder="Password">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="d-flex justify-content-between">
                    <div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember" asp-for="Input.RememberMe">
                            <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                        </div>
                    </div>
                    <div>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </div>
                </div>

                <button class="btn btn-info btn-block my-4" type="submit">Sign in</button>

                <div class="text-center">
                    <p>
                        Not a member?
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    </p>
                  
                </div>
            </form>
        </div>
    </div>
  
    <!-- /Start your project here-->
    <!-- SCRIPTS -->
    <!-- JQuery -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script src="~/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->

    <script src="~/js/mdb.min.js"></script>
</body>

</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
